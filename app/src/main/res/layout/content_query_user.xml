<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin_left"
    android:paddingRight="@dimen/activity_horizontal_margin_right"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".QueryUserActivity"
    tools:showIn="@layout/activity_query_user"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:orientation="vertical"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

      <com.zfdang.zsmth_android.fresco.WrapContentDraweeView
          android:id="@+id/imageView"
          xmlns:fresco="http://schemas.android.com/apk/res-auto"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_margin="10dp"
          android:src="@drawable/ic_account_circle_black_48dp"
          fresco:roundedCornerRadius="10dp"
          fresco:roundingBorderColor="@color/avatar_border_color"
          fresco:roundingBorderWidth="2dp"
          />

      <TableLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="10dp"
          >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_id_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="ID:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_id"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:text=""
              android:textColor="@color/colorPrimary"
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_nickname_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="昵称:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_nickname"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_gender_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="性别:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_gender"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_constellation_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="星座:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_constellation"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_qq_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="QQ:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_qq"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_homepage_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="主页:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_homepage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>


      </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/textView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:gravity="center_horizontal"
          android:text="论坛属性"
          android:textColor="@color/status_text_night"
          android:textSize="@dimen/zsmth_font_size_large"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <TableLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="5dp"
          >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_level_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="论坛身份:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_level"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_totalpost_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="帖子总数:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_totalpost"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_logincount_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="登录次数:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_logincount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_life_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="论坛等级:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_life"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_score_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="用户积分:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_score"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_first_logintime_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="首次登录:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_first_logintime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_last_logintime_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="上次登录:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_last_logintime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_loginip_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:text="最后访问IP:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_loginip"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            >

          <TextView
              android:id="@+id/query_user_currentstatus_label"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="当前状态:"
              android:textColor="@color/status_text_night"
              />

          <TextView
              android:id="@+id/query_user_currentstatus"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:text=""
              android:textColor="@color/status_text_night"
              />
        </TableRow>
      </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="查询网友:"
          android:textColor="@color/status_text_night"
          />

      <EditText
          android:id="@+id/query_user_input"
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:selectAllOnFocus="true"
          android:textColor="@color/status_text_night"
          />

      <Button
          android:id="@+id/query_user_action_query"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:background="@drawable/navigation_button_background"
          android:text="查询"
          android:textColor="@color/status_text_night"
          />
    </LinearLayout>

  </LinearLayout>

</RelativeLayout>
